<div class="flex justify-between items-center">
  <div id="<%= dom_id project %>" class="my-5 space-y-5">
    <%= project.name %>
    <%= project.description %>
  </div>
  <div class="space-x-2">
    <%= link_to "Show", project, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "Edit", edit_project_path(project), class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <div class="inline-block">
      <%= button_to "Destroy", project, method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
